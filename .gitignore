# ignore everything in the root except the "public/wp-content" directory.
public/wp-admin
public/wp-includes
public/*.*

# ignore everything in the "public/wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
public/wp-content/*
!public/wp-content/mu-plugins/
!public/wp-content/plugins/
!public/wp-content/themes/

# ignore these plugins
public/wp-content/plugins/hello.php

# ignore specific themes
public/wp-content/themes/twenty*/

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
!*.sql
!*.sqlite
!snippets.txt
